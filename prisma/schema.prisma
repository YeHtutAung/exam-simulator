generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum QuestionType {
  MCQ_SINGLE
  NUMERIC
  TEXT
}

enum AttachmentType {
  IMAGE
  PDF_SNIP
  TABLE_IMAGE
  OTHER
}

enum ImportDraftStatus {
  PARSING
  READY_TO_PUBLISH
  NEEDS_REVIEW
  FAILED
}

model Exam {
  id        String     @id @default(uuid()) @db.Uuid
  code      String?    @unique
  title     String
  session   String
  paper     String
  language  String
  createdAt DateTime   @default(now())

  questions    Question[]
  importDrafts ImportDraft[]
}

model Question {
  id            String       @id @default(uuid()) @db.Uuid
  examId        String       @db.Uuid
  questionNo    Int
  type          QuestionType
  stem          String
  correctAnswer String
  explanation   String?
  sourcePage    String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  exam        Exam        @relation(fields: [examId], references: [id], onDelete: Cascade)
  choices     Choice[]
  attachments Attachment[]

  @@unique([examId, questionNo])
  @@index([examId])
  @@index([type])
  @@index([stem])
}

model Choice {
  id         String   @id @default(uuid()) @db.Uuid
  questionId String   @db.Uuid
  label      String
  text       String
  sortOrder  Int

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([questionId, label])
  @@index([questionId])
}

model Attachment {
  id         String         @id @default(uuid()) @db.Uuid
  questionId String         @db.Uuid
  type       AttachmentType
  url        String
  caption    String?
  width      Int?
  height     Int?
  sortOrder  Int
  createdAt  DateTime       @default(now())

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

model ImportDraft {
  id               String            @id @default(uuid()) @db.Uuid
  title            String
  session          String
  paper            String
  language         String
  status           ImportDraftStatus @default(PARSING)
  errors           Json?
  warnings         Json?
  publishedExamId  String?           @db.Uuid
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  publishedExam Exam? @relation(fields: [publishedExamId], references: [id])
  questions     ImportDraftQuestion[]
}

model ImportDraftQuestion {
  id             String        @id @default(uuid()) @db.Uuid
  draftId        String        @db.Uuid
  questionNo     Int
  type           QuestionType  @default(MCQ_SINGLE)
  stem           String
  correctAnswer  String?
  sourcePage     String?
  warnings       Json?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  draft       ImportDraft            @relation(fields: [draftId], references: [id], onDelete: Cascade)
  choices     ImportDraftChoice[]
  attachments ImportDraftAttachment[]

  @@unique([draftId, questionNo])
  @@index([draftId, questionNo])
}

model ImportDraftChoice {
  id              String              @id @default(uuid()) @db.Uuid
  draftQuestionId String              @db.Uuid
  label           String
  text            String
  sortOrder       Int

  draftQuestion ImportDraftQuestion @relation(fields: [draftQuestionId], references: [id], onDelete: Cascade)

  @@unique([draftQuestionId, label])
  @@index([draftQuestionId])
}

model ImportDraftAttachment {
  id              String              @id @default(uuid()) @db.Uuid
  draftQuestionId String              @db.Uuid
  type            AttachmentType
  url             String
  caption         String?
  width           Int?
  height          Int?
  sortOrder       Int
  createdAt       DateTime            @default(now())

  draftQuestion ImportDraftQuestion @relation(fields: [draftQuestionId], references: [id], onDelete: Cascade)

  @@index([draftQuestionId])
}

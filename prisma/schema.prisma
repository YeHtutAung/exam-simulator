generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum QuestionType {
  MCQ_SINGLE
  NUMERIC
  TEXT
}

enum AttachmentType {
  IMAGE
  PDF_SNIP
  TABLE_IMAGE
  OTHER
}

enum ImportDraftStatus {
  PARSING
  READY_TO_PUBLISH
  NEEDS_REVIEW
  FAILED
  PUBLISHED
}

enum UserRole {
  OWNER
  USER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum AttemptStatus {
  IN_PROGRESS
  SUBMITTED
}

model User {
  id            String       @id @default(uuid()) @db.Uuid
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          UserRole     @default(USER)
  status        UserStatus   @default(ACTIVE)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  deletedAt     DateTime?

  accounts            Account[]
  sessions            Session[]
  attempts            Attempt[]
  passwordResetTokens PasswordResetToken[]
}

model Account {
  id                String   @id @default(uuid()) @db.Uuid
  userId            String   @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Exam {
  id        String     @id @default(uuid()) @db.Uuid
  code      String?    @unique
  title     String
  session   String
  paper     String
  language  String
  durationMinutes Int @default(150)
  createdAt DateTime   @default(now())

  questions            Question[]
  targetedImportDrafts ImportDraft[] @relation("ImportDraftTarget")
  publishedImportDrafts ImportDraft[] @relation("ImportDraftPublished")
  attempts             Attempt[]
}

model Question {
  id            String       @id @default(uuid()) @db.Uuid
  examId        String       @db.Uuid
  questionNo    Int
  type          QuestionType
  stem          String
  stemImageUrl  String?
  correctAnswer String
  explanation   String?
  sourcePage    String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  exam        Exam        @relation(fields: [examId], references: [id], onDelete: Cascade)
  choices     Choice[]
  attachments Attachment[]
  attemptAnswers AttemptAnswer[]

  @@unique([examId, questionNo])
  @@index([examId])
  @@index([type])
  @@index([stem])
}

model Choice {
  id         String   @id @default(uuid()) @db.Uuid
  questionId String   @db.Uuid
  label      String
  text       String
  sortOrder  Int

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([questionId, label])
  @@index([questionId])
}

model Attachment {
  id         String         @id @default(uuid()) @db.Uuid
  questionId String         @db.Uuid
  type       AttachmentType
  url        String
  caption    String?
  width      Int?
  height     Int?
  sortOrder  Int
  createdAt  DateTime       @default(now())

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

model ImportDraft {
  id               String            @id @default(uuid()) @db.Uuid
  title            String
  session          String
  paper            String
  language         String
  startPage        Int?
  status           ImportDraftStatus @default(PARSING)
  progressInt      Int               @default(0)
  stage            String?
  startedAt        DateTime?
  finishedAt       DateTime?
  jobLockedAt      DateTime?
  jobLockedBy      String?
  attempts         Int               @default(0)
  questionPdfPath  String?
  answerPdfPath    String?
  errors           Json?
  warnings         Json?
  targetExamId     String?           @db.Uuid
  publishedExamId  String?           @db.Uuid
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  targetExam    Exam? @relation("ImportDraftTarget", fields: [targetExamId], references: [id])
  publishedExam Exam? @relation("ImportDraftPublished", fields: [publishedExamId], references: [id])
  questions     ImportDraftQuestion[]

  @@index([status, jobLockedAt])
}

model ImportDraftQuestion {
  id             String        @id @default(uuid()) @db.Uuid
  draftId        String        @db.Uuid
  questionNo     Int
  type           QuestionType  @default(MCQ_SINGLE)
  stem           String
  stemImageUrl   String?
  correctAnswer  String?
  sourcePage     Int?
  pageImageUrl   String?
  cropX          Int?
  cropY          Int?
  cropW          Int?
  cropH          Int?
  cropScale      Float?
  warnings       Json?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  draft       ImportDraft            @relation(fields: [draftId], references: [id], onDelete: Cascade)
  choices     ImportDraftChoice[]
  attachments ImportDraftAttachment[]

  @@unique([draftId, questionNo])
  @@index([draftId, questionNo])
}

model ImportDraftChoice {
  id              String              @id @default(uuid()) @db.Uuid
  draftQuestionId String              @db.Uuid
  label           String
  text            String
  sortOrder       Int

  draftQuestion ImportDraftQuestion @relation(fields: [draftQuestionId], references: [id], onDelete: Cascade)

  @@unique([draftQuestionId, label])
  @@index([draftQuestionId])
}

model ImportDraftAttachment {
  id              String              @id @default(uuid()) @db.Uuid
  draftQuestionId String              @db.Uuid
  type            AttachmentType
  url             String
  caption         String?
  width           Int?
  height          Int?
  sortOrder       Int
  createdAt       DateTime            @default(now())

  draftQuestion ImportDraftQuestion @relation(fields: [draftQuestionId], references: [id], onDelete: Cascade)

  @@index([draftQuestionId])
}

model Attempt {
  id             String      @id @default(uuid()) @db.Uuid
  userId         String      @db.Uuid
  examId         String?     @db.Uuid
  status         AttemptStatus @default(IN_PROGRESS)
  startedAt      DateTime    @default(now())
  finishedAt     DateTime?
  score          Int?
  totalQuestions Int         @default(0)
  correctCount   Int         @default(0)
  durationSec    Int?
  metadata       Json?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  exam     Exam?   @relation(fields: [examId], references: [id], onDelete: SetNull)
  answers  AttemptAnswer[]

  @@index([userId, createdAt])
  @@index([examId])
}

model AttemptAnswer {
  id            String   @id @default(uuid()) @db.Uuid
  attemptId     String   @db.Uuid
  questionId    String   @db.Uuid
  chosenOption  String?
  isCorrect     Boolean  @default(false)
  answeredAt    DateTime?
  timeSpentSec  Int?
  createdAt     DateTime @default(now())

  attempt  Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([attemptId, questionId])
  @@index([attemptId])
  @@index([questionId])
}
